<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EFE8"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Biweekly_value"
        android:layout_width="160dp"
        android:layout_height="28dp"
        android:layout_marginStart="214dp"
        android:layout_marginBottom="224dp"
        android:fontFamily="@font/lato"
        android:textColor="#000000"
        android:text="2"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Hourly_value"
        android:layout_width="160dp"
        android:layout_height="28dp"
        android:layout_marginStart="214dp"
        android:layout_marginBottom="280dp"
        android:fontFamily="@font/lato"
        android:textColor="#000000"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Monthly_value"
        android:layout_width="160dp"
        android:layout_height="28dp"
        android:layout_marginStart="214dp"
        android:layout_marginBottom="168dp"
        android:fontFamily="@font/lato"
        android:textColor="#000000"
        android:text="3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Annual_value"
        android:layout_width="160dp"
        android:layout_height="28dp"
        android:layout_marginStart="214dp"
        android:layout_marginBottom="334dp"
        android:fontFamily="@font/lato"
        android:textColor="#000000"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Calculate_button"
        android:layout_width="149dp"
        android:layout_height="60dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="#64AB52"
        android:fontFamily="@font/lato"
        android:text="Calculate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/salary_text"
        android:layout_width="80dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/lato"
        android:textColor="#000000"
        android:text="Salary: "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/entered_salary"
        android:layout_width="207dp"
        android:layout_height="52dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:gravity="bottom"
        android:inputType="numberDecimal"
        android:includeFontPadding="true"
        android:paddingBottom="8dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:backgroundTint="#081006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Annual_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginBottom="334dp"
        android:fontFamily="@font/lato"
        android:textColor="#000000"
        android:text="Annual Salary:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Hourly_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="280dp"
        android:fontFamily="@font/lato"
        android:textColor="#000000"
        android:text="Hourly Wage:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Monthly_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="168dp"
        android:fontFamily="@font/lato"
        android:textColor="#000000"
        android:text="Monthly Income:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Biweekly_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="224dp"
        android:fontFamily="@font/lato"
        android:textColor="#000000"
        android:text="Biweekly Income:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/dark_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/lato"
        android:text="Dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/math_button"
        android:layout_width="69dp"
        android:layout_height="51dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/lato"
        android:text="Math"
        android:textSize="10sp"
        android:backgroundTint="#64AB52"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>